// класс .visually-hidden для стилизации чекбоксов и радио-кнопок

.visually-hidden:not(:focus):not(:active), input[type="checkbox"].visually-hidden, input[type="radio"].visually-hidden {
	position: absolute;
	width: 1px;
	height: 1px;
	margin: -1px;
	padding: 0;
	border: 0;
	white-space: nowrap;
	clip: rect(0 0 0 0);
	clip-path: inset(100%);
	overflow: hidden;
}


.main-button {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 268px;
	height: 70px;
	background-color: $color-orange;
	color: #FFF;
	text-decoration: none;
	outline: none;
	border: none;
	border-radius: 15px;
	text-transform: uppercase;
	font-weight: 600;
	font-size: 22px;
	transition: all 0.3s ease;

	&:hover, &:focus {
		transform: translateY(-7px);
		box-shadow: 0 10px 15px rgba(0, 0, 0, 0.25);
		transition: all 0.3s ease;
	}
}

.section-button {
	width: 472px;
	height: 70px;
	margin-top: 35px;
}