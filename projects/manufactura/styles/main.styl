.footer__nav {
	height: 100px;
	color: #FFF;
}


.footer__items {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	height: 100%;
}

.footer__item {
	font-weight: 500;
}

.footer__link {
	font-weight: 500;
	font-size: 14px;
	line-height: 130%;
	text-transform: uppercase;
	color: #FFFFFF;
	text-decoration: none;
	transition: all 0.3s ease;


	&:hover, &:focus {
		color: $gold;
		transition: all 0.3s ease;
	}

	&_active {
		color: $gold;

		&:hover, &:focus {
			text-decoration: underline;
		}
	}

	&_phone {
		font-weight: 400;
		font-size: 20px;
		line-height: 32px;
	}


}


.footer__item_logo {
	margin-left: 109px;
	margin-right: 128px;
}

.footer_bottom {
	color: #FFF;
	padding-top: 26px;
	padding-bottom: 26px;
	border-top: 1px solid $lightbeige;
	margin: 0 auto;
	text-align: center;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}

.footer__policy, .footer__copyright {
	font-weight: 300;
	font-size: 14px;
	line-height: 125.5%;
	color: #FFF;
	text-decoration: none;
}

.footer__policy {
	margin-right: 10px;
	&:hover, &:focus {
		color: $gold;
		transition: color 0.3s ease;
	}
