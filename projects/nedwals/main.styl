body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background-color: lightgrey;
}

.main-link:first-child {
  margin-bottom: 40px;
}

.main-link {
  width: 296px;
  height: 60px;
  text-decoration: none;
  background-color: $main-color;
  color: $white-color;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-family: 'Manrope';
  font-weight: 600;
  text-transform: uppercase;
  font-size: 18px;

  & svg {
    margin-left: 13px;
  }

  &:hover, &:focus {
    & svg {
      //animation-name: screw;
      //animation-duration: 1s;
      //animation-timing-function: ease-in-out;
      transform: translateX(7px) rotate(360deg);
      //transform: translateX(5px);
      transition: transform 1s ease-in-out;
    }
  }
}

