$main-color = #486BB1;
$white-color = #FFFFFF;

/* manrope-600 - latin_cyrillic */
@font-face {
  font-family: 'Manrope';
  font-style: normal;
  font-weight: 600;
  src: url('manrope-v8-latin_cyrillic-600.eot'); /* IE9 Compat Modes */
  src: local(''),
          url('manrope-v8-latin_cyrillic-600.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
          url('manrope-v8-latin_cyrillic-600.woff2') format('woff2'), /* Super Modern Browsers */
          url('manrope-v8-latin_cyrillic-600.woff') format('woff'), /* Modern Browsers */
          url('manrope-v8-latin_cyrillic-600.ttf') format('truetype'), /* Safari, Android, iOS */
          url('manrope-v8-latin_cyrillic-600.svg#Manrope') format('svg'); /* Legacy iOS */
}


