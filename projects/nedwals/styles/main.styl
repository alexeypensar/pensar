      color: $color-blue;
      transition: all 0.5s ease;

      &::before {
        opacity: 1;
        transition: opacity 0.5s ease;
      }
    }

    & .main-button_white, & .facilities__description {
      visibility: visible;
      opacity: 1;
      transition: opacity 0.5s ease;
    }


