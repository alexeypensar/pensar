.products__items {

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
}

.products__item {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: relative;
  width: 220px;
  height: 141px;
  margin-bottom: 77px;
  text-decoration: none;
  transform: translateY(0);
  transition: transform 0.3s ease-in-out;

  &::after {
    content: ''
    width: 100%;
    height: 5px;
    background-color: $color-blue;
    bottom: 0;
    left: 0;
    //transition: width 0.3s ease-in-out;

  }

  &:hover, &:focus {

    transform: translateY(-8px);
    transition: transform 0.3s ease-in-out;

    //transition: all 0.3s ease-in-out;

    //&::after {
    //  width: 105%;
    //  transition: width 0.3s ease-in-out;
    //}

    & .products__name {
      color: $color-blue;
      transition: color 0.3s ease-in-out;
    }

    & .products__image {
      transform: scale(1.15);
      transition: transform 0.3s ease-in-out;
    }
  }
}

.products__image {
  transform: scale(1);
  transition: transform 0.3s ease-in-out;
}

.products__name {
  font-size: 16px;
  line-height: 22px;
  text-align: center;
  font-weight: 400;
  color: $color-black;
  width: 85%;
  transition: color 0.3s ease-in-out;
}

.products__item_blue {
  background-color: $color-blue;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  padding: 20px;

  & img {
    transition: transform 2s ease-in-out;
  }

  &::after {
    display: none;
  }

  & span {
    color: #FFFFFF;
    font-weight: 600;
    font-size: 16px;
    line-height: 150%;
    text-transform: uppercase;
  }

  &:hover, &:focus {
    & img {
      transform: rotate(360deg);
      transition: transform 2s ease-in-out;
    }
  }
}


