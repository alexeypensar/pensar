@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
@import '__helpers.styl';
@import '__animations.styl';
@import '__adaptive.styl';

html {
  scroll-behavior: smooth;
}


html, body {
  font-family: 'Manrope', sans-serif;
  font-style: normal;
  font-size: 16px;
  font-weight: 400;
  color: $color-black;
}

.container {
  max-width: 1248px;
  margin: 0 auto;
  width: 100%;
  padding-left: 15px;
  padding-right: 15px;
}


.header__top {
  padding-top: 12px;
  padding-bottom: 12px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid $color-lightgray;
}

.header__logo {
  margin-right: 37px;
}

.header__location {
  display: flex;
  flex-direction: row;
  text-decoration: none;
  color: $color-black;
  font-size: 14px;
  transition: color 0.25s ease-in-out;

  & img {
    margin-right: 11px;
    transform: scale(1);
    transition: transform 0.25s ease-in-out;
  }

  &:hover, &:focus {
    color: $color-blue;
    transition: color 0.25s ease-in-out;

    & img {
      transform: scale(1.1);
      transition: transform 0.25s ease-in-out;
    }
  }

}



.header__form {
  position: relative;
  margin-left: 59px;

  &::before {
    content: url('../img/icons/search.svg');
    position: absolute;
    top: 10px;
    left: 13px;
  }
}

.header__search {
  border: 1px solid $color-lightgray;
  padding: 10px 13px 10px 42px;
  font-size: 14px;
  width: 290px;
  height: 40px;
}

.header__phone {
  font-weight: 600;
  font-size: 26px;
  text-decoration: none;
  color: $color-black;
  margin-left: 66px;
}

.header__list {
  width: 100%;
  height: 65px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.header__item {
  height: 100%;
  display: flex;
}

.header__link {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: $color-black;

  &_arrow {
    position: relative;

    &::after {
      //position: absolute;
      //right: -20px;
      content: url('../img/icons/arrow-blue-down.svg');
      padding-left: 8px;
    }
  }
}

.header__link_arrow {

  &:hover, &:focus {

    & + .header__sublist {
      visibility: visible;
      opacity: 1;
      height: auto;
      transition: all 0.25s ease-in-out;
    }
  }
}

.header__item_drop {
  position: relative;
}

.header__sublist {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  min-width: 200px;
  width: auto;
  //width: 200px;
  z-index: 99999;
  background-color: #fff;
  border: 1px solid $color-blue;
  padding: 20px 30px 10px 20px !important;
  position: absolute;
  //padding-top: 66px;
  top: 50px;
  opacity: 0;
  height: 0;
  visibility: hidden;

  &:hover {
    visibility: visible;
    opacity: 1;
    height: auto;
    transition: all 0.25s ease-in-out;
  }

}



.header__subitem a {
  text-decoration: none;
  color: $color-black;
  display: inline-block;
  margin-bottom: 5px;
  white-space: nowrap;

}

