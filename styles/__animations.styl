@keyframes dot {
	0% {
		color: $black;
	}
	50% {
		color: $red;
	}
	100% {
		color: $black;
	}
}

@keyframes arrow {
	0% {
		left: 0;
	}
	33% {
		left: 10px;
	}

	66% {
		left: -5px
	}

	100% {
		left: 0;
	}
}

