@keyframes dot {
	0%, 100% {
		color: $black;
	}
	50% {
		color: $red;
	}

}

@keyframes arrow {
	0%, 100% {
		left: 0;
	}
	33% {
		left: 10px;
	}

	66% {
		left: -5px
	}

}

@keyframes portfolio {

	0% {
		opacity: 1;	
	}

	50% {
		opacity: 0.05;
	}

	100% {
		opacity: 1;	
	}
	
}

