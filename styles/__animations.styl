@keyframes dot {
	0% {
		color: $black;
	}
	50% {
		color: $red;
	}
	100% {
		color: $black;
	}
}

@keyframes leftDot {
	0% {
		top: 80%;
	}

	25% {
		top: 20%;
	}

	50% {
		top: 80%
	}

	100% {
		top: 80%;
	}
}


@keyframes rightDot {
	0% {
		top: 20%;
	}

	25% {
		top: 80%;
	}

	50% {
		top: 20%
	}

	100% {
		top: 20%;
	}
}

