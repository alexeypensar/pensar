.services__item_shadow {
	width: 400px;
	height: 340px;
	position: relative;
	content: '';
	background: $gradient;
	&:hover, &:focus {
		.services__item {
			background-color: $black;
			& a, & h4, & p {
				color: $white;
			}
			&::after {
				top: 81%;
				transition: all 0.8s ease-in-out;
			}
		}
	}
}

.services__item_shadow:nth-child(2) {
	margin-left: 26px;
	margin-top: 280px;
	& .services__item {
		top: 26px;
		left: -26px;
		&::after {
			left: -8px;
			top: calc(100% - 8px);
		}
	}
	&:hover, &:focus {
		& .services__item::after {
			left: 82%;
		}
	}
}

.services__item_shadow:nth-child(3) {
	//margin-left: 26px;
	margin-top: 150px;
	& .services__item {
		top: -26px;
		left: -26px;
	}
	&:hover, &:focus {
		& .services__item::after {
			right: 82%;
			top: -8px;
		}
	}
}

