}

html {
	scroll-behavior: smooth;
}

html, body {
	font-family: 'Roboto', Arial, sans-serif;
	font-size: 16px;
	font-weight: 400px;
	line-height: 1.5;
	color: $black;
	background-color: $white;
}

.container {
	max-width: 1400px;
	margin: 0 auto;
	width: 100%;
	padding-left: 15px;
	padding-right: 15px;
}

.header {
	min-height: 100vh;
	background: url('../img/main-header-bg.png') no-repeat bottom -50px center;
	background-size: 100%;
	height: 100%;
}

.header__nav {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	height: 100px;
	//margin-bottom: 100px;
}

.header__logo {
	font-family: 'Montserrat', sans-serif;
	font-weight: 600;
	font-size: 42px;
	line-height: 1;
}

.header__logo_red {
	font-size: 50px;
	animation: dot 3s ease-in-out infinite;
	line-height: 1;
}

.header__links {
	width: 50%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-right: 170px;
	height: 100%;
}

.header__link {
	font-weight: 500;
	font-size: 18px;
	color: #3D3D3D;
	text-decoration: none;
	&:hover, &:focus {
		{text-gradient}
	}
}

.header__li_divider {
	width: 9px;
	height: 9px;
	border-radius: 50%;
	background: $gradient;
}

.header__submenu {
	display: none;
	//opacity: 0;
}

.header__li_submenu:hover, .header__li_submenu:focus {
	.header__submenu {
		//padding-top: 40px;
		position: absolute;
		//top: 40px;
		right: 0;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: flex-end;
		width: 190px;
		height: 100px;
		padding: 12px;
		border: 2px solid $red;
		box-shadow: 0 5px 15px -10px $red;
		background-color: $white;
		opacity: 1;
		//border-radius: 10px;
	}
	.submenu__arrow {
		transform: rotate(180deg);

	}
}

.header__li_small {
	width: 100%;
	text-align: right;
}

.header__link_small {
	font-weight: 300;
	font-size: 14px;
	color: #3D3D3D;
	text-decoration: none;
	display: inline-block;
	width: 100%;
	text-align: right;
	&:hover, &:focus {
		font-weight: 500;
		font-size: 14px;
		{text-gradient}
	}
	//text-align: right;
}

.header__li:first-child {
	position: relative;
}

.submenu__arrow {
	position: relative;
	top: -1px;
	margin-left: 7px;
	transform: rotate(0deg);
}

.header__li:first-child .header__link:hover svg g path,
.header__li:first-child .header__link:focus svg g path {
	fill: $red;
	transition: 0s;
}

.header__li:first-child .header__link:hover + .header__links_submenu,
.header__li:first-child .header__link:focus + .header__links_submenu {
	display: flex;
}

.header__menu-button {
	border: none;
	outline: none;
	background-color: transparent;
	cursor: pointer;
}

.header__content {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
}

.header__lines {
	position: relative;
	width: 100%;
}

.header__lines_left {
	content: '';
	width: 2px;
	height: 536px;
	position: absolute;
	left: 5px;
	top: 0;
	background: $gradient;
	z-index: 1;
	&::after {
		position: absolute;
		content: '';
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: $gradient;
		top: 80%;
		left: -19px;
		border: 10px solid #fff;
		//animation: 7s leftDot ease-in-out infinite;
	}
}

.header__lines_right {
	content: '';
	width: 2px;
	height: 543px;
	position: absolute;
	right: 5px;
	top: 0;
	background: $gradient;
	z-index: 1;
	&::after {
		position: absolute;
		content: '';
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: $gradient;
		top: 20%;
		left: -19px;
		border: 10px solid #fff;
		//animation: 7s rightDot ease-in-out infinite;
	}
