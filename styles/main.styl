// questions page

.faq__header, .portfolio-page__header {
	background: #FFFFFE;
	height: auto;
	min-height: auto;
}

.faq__heading_h1, .portfolio-page__heading_h1 {
	font-size: 80px;
	text-align: center;
	width: 80%;
}

.faq__heading_h2, .portfolio-page__heading_h2 {
	font-size: 42px;
	text-align: center;
	width: 65%;
}

.faq-page {

	& .faq__list {
		align-items: center;
		margin: 70px auto 60px auto;
	}

	& .faq {
		padding-bottom: 100px;
	}

}

.faq-page__text {
	font-weight: 700;
	font-size: 26px;
	line-height: 30px;
	margin-left: 210px;
	display: inline-block;
	width: 55%;

	&_red {
		{text-gradient};
	}
}

.faq-page__contacts {
	display: flex;

	& .contacts__items {
		position: relative;
		top: -50px;
		flex-direction: column;
		margin-top: 0;
		align-items: flex-start;
		width: 30%;
		margin-left: 200px;
	}
}

.portfolio-page {
	//margin-left: 96px;

	& .portfolio__items {
		margin-bottom: 0;
	}

	& .portfolio__item:not(:last-of-type) {
		margin-bottom: 40px;
	}
}