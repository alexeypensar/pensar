	width: 100%;
	height: auto;
	{border-gradient-bold};
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	position: relative;
	transition: height 0.4s ease;
	&::before {
		content: '';
		position: absolute;
		width: 16px;
		height: 16px;
		border-radius: 50%;
		background-color: $red;
		left: -10px;
		top: 32px;
