@import "reset.css";

@import "__fonts.styl";
@import "__variables.styl";
@import "__helpers.styl";
@import "__animations.styl";

@import "__adaptive.styl";


* {
	transition: all 0.4s ease;
}


html {
	scroll-behavior: smooth;
}

html, body {
	font-family: 'Roboto', Arial, sans-serif;
	font-size: 16px;
	font-weight: 400px;
	line-height: 1.5;
	color: $black;
	background-color: $white;
}

.container {
	max-width: 1400px;
	margin: 0 auto;
	width: 100%;
	padding-left: 15px;
	padding-right: 15px;
}

.header {
	min-height: 100vh;
	background: url('../img/main-header-bg.png') no-repeat bottom -50px center;
	background-size: 100%;
	height: 100%;



}


.header__nav {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	height: 100px;
	//margin-bottom: 100px;
}

.header__logo {
	font-family: 'Montserrat', sans-serif;
	font-weight: 600;
	font-size: 42px;
}

.header__logo_red {
	font-size: 50px;
	animation: dot 3s ease-in-out infinite;
}

.header__links {
	width: 50%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-right: 135px;
	height: 100%;


}

.header__link {
	font-weight: 500;
	font-size: 18px;
	color: #3D3D3D;
	text-decoration: none;

	&:hover, &:focus {
		background: $gradient;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}
}

.header__li_divider {
	width: 9px;
	height: 9px;
	border-radius: 50%;
	background: $gradient;
}



.header__links_submenu {
	position: absolute;
	top: 0;
	left: 0;
	margin-top: 40px;
	flex-direction: column;
	width: 250px;
	height: 200px;
	display: none;
	padding: 20px 10px;
	border: 2px solid $red;
	border-radius: 10px;

	&:hover {
		display: flex;
	}
}

.header__li:first-child {
	position: relative;
}

.header__li:first-child svg {
	position: relative;
	top: -1px;
	margin-left: 7px;
}

.header__li:first-child .header__link:hover svg g path,
.header__li:first-child .header__link:focus svg g path {
	fill: $red;
	transition: 0s;

}

.header__li:first-child .header__link:hover + .header__links_submenu,
.header__li:first-child .header__link:focus + .header__links_submenu {
	display: flex;
}





.header__menu-button {
	border: none;
	outline: none;
	background-color: transparent;
	cursor: pointer;
}



.header__content {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;



}

.header__lines {
	position: relative;
	width: 100%;
}

.header__lines_left {
	content: '';
	width: 2px;
	height: 536px;
	position: absolute;
	left: 5px;
	top: 0;
	background: $gradient;
	z-index: 1;

	&::after {
		position: absolute;
		content: '';
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: $gradient;
		top: 80%;
		left: -19px;
		border: 10px solid #fff;
		//animation: 7s leftDot ease-in-out infinite;
	}
}
.header__lines_right {
	content: '';
	width: 2px;
	height: 543px;
	position: absolute;
	right: 5px;
	top: 0;
	background: $gradient;
	z-index: 1;

	&::after {
		position: absolute;
		content: '';
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background: $gradient;
		top: 20%;
		left: -19px;
		border: 10px solid #fff;
		//animation: 7s rightDot ease-in-out infinite;


	}
}

.button {
	width: 244px;
	height: 63px;
	display: flex;
	justify-content: center;
	align-items: center;
	font-weight: 500;
	font-size: 18px;
	background-color: transparent;
	border: 2px solid;
	border-image: $gradient 2 2;
	cursor: pointer;

	& svg {
		margin-left: 15px;
	}

	&:hover, &:focus {
		background: $gradient;
		color: $white;
		box-shadow: 0 20px 50px -15px $red;

		& svg {
			position: relative;
			left: 0;
			animation: arrow 0.8s ease-in-out;
		}

		& svg linearGradient stop {
			stop-color: $white;
		}

	}
}


.header__heading_h1 {
	font-family: 'Montserrat', sans-serif;
	font-size: 120px;
	font-weight: 800;
	background: $gradient;
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	margin-bottom: 50px;
	line-height: 1;
	margin-top: 50px;
}

.header__heading_h2 {
	font-weight: 700;
	font-size: 42px;
	margin-bottom: 30px;
	line-height: 1;
}

.header__heading_h3 {
	font-weight: 300;
	font-size: 18px;
	margin-bottom: 50px;
	line-height: 1;
}