	}
	&::after {
		content: url('../img/icons/arrow-faq.svg');
		position: absolute;
		right: 35px;
		top: 30px;
		transition: all 0.4s ease;
		transform: rotate(0deg);
	}
	&:not(:last-child) {
		margin-bottom: 35px;
	}
	&_opened {
		transition: height 0.4s ease;
		&::after {
			transform: rotate(-180deg);
			// fill: gray;
			transition: all 0.4s ease;
		}
		&::before {
			top: 83px;
			transition: all 0.4s ease;
		}
	}
}

